{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        },
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "includeFiles": [
                    "app/**",
                    "config/**",
                    "requirements.txt"
                ],
                "excludeFiles": [
                    "frontend/**",
                    "venv/**",
                    ".venv/**",
                    "node_modules/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.py"
        },
        {
            "src": "/appointments/(.*)",
            "dest": "/api/index.py"
        },
        {
            "src": "/services/(.*)",
            "dest": "/api/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}